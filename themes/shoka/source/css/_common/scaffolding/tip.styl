.tip {
  position: fixed;
  background: var(--grey-9-a5);
  color: #fff;
  top: 50%;
  left: 50%;
  z-index: $zindex-5;
  padding: .625rem 1rem;
  border-radius: .625rem;
  transform: translate(-50%,-50%);
  text-align: center;
  font-size: $font-size-small;
  backdrop-filter: blur(.625rem);
  @extend .fade-in;

  &.hide {
    @extend .fade-out;
  }
}
