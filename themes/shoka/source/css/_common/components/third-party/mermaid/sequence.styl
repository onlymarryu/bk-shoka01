.actor {
  stroke: var(--text-color);
  fill: var(--grey-1);
}

text.actor {
  fill: var(--text-color);
  stroke: none;
}

.actor-line {
  stroke: var(--text-color);
}

.messageLine0 {
  stroke-width: 1.5;
  stroke-dasharray: '2 2';
  stroke: var(--text-color);
}

.messageLine1 {
  stroke-width: 1.5;
  stroke-dasharray: '2 2';
  stroke: var(--text-color);
}

#arrowhead {
  fill: var(--text-color);
}

.sequenceNumber {
  fill: white;
}

#sequencenumber {
  fill: var(--text-color);
}

#crosshead path {
  fill: var(--text-color) !important;
  stroke: var(--text-color) !important;
}

.messageText {
  fill: var(--text-color);
  stroke: none;
}

.labelBox {
  stroke: var(--text-color);
  fill: var(--grey-3);
}

.labelText {
  fill: var(--text-color);
  stroke: none;
}

.loopText {
  fill: var(--text-color);
  stroke: none;
}

.loopLine {
  stroke-width: 2;
  stroke-dasharray: '2 2';
  stroke: var(--text-color);
}

.note {
  stroke: var(--grey-4);
  fill: var(--grey-3);
}

.noteText {
  fill: black;
  stroke: none;
  font-family: var(--mermaid-font-family);
  font-size: .875rem;
}

.activation0 {
  fill: #f4f4f4;
  stroke: #666;
}

.activation1 {
  fill: #f4f4f4;
  stroke: #666;
}

.activation2 {
  fill: #f4f4f4;
  stroke: #666;
}
